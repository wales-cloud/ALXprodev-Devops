#!/bin/bash

# Check if data.json exists
if [ ! -f data.json ]; then
  echo "data.json not found!"
  exit 1
fi

# Extract and format values
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
weight_kg=$(jq -r '.weight' data.json | awk '{printf "%d", $1 / 10}')
height_m=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}')

# Output exactly as required
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."
